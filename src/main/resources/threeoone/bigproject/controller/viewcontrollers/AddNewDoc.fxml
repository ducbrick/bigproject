              <Label styleClass="label fade-in" text="ISBN" GridPane.rowIndex="3" />
              <TextField fx:id="isbn" prefHeight="25.0" prefWidth="507.0" promptText="Optional" styleClass="text-field fade-in" GridPane.columnIndex="1" GridPane.rowIndex="3" />
              <Label styleClass="label fade-in" text="Description" GridPane.rowIndex="4" />
              <TextField fx:id="description" prefHeight="25.0" prefWidth="507.0" promptText="Optional" styleClass="text-field fade-in" GridPane.columnIndex="1" GridPane.rowIndex="4" />
              <Label styleClass="label fade-in" text="Date" GridPane.rowIndex="5" />
              <DatePicker fx:id="date" prefHeight="40.0" prefWidth="688.0" promptText="mm/dd/yyyy" styleClass="date-picker fade-in" GridPane.columnIndex="1" GridPane.rowIndex="5" />
              <Label styleClass="label fade-in" text="Document" GridPane.rowIndex="6" />
              <Button fx:id="chooseButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="691.0" styleClass="button fade-in" text="No File Selected" GridPane.columnIndex="1" GridPane.rowIndex="6" />
