<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="720.0" prefWidth="1200.0" styleClass="background" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="threeoone.bigproject.controller.viewcontrollers.RegisterController">
   <children>
      <Label layoutX="526.0" layoutY="147.0" styleClass="label-title" text="Account Register">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button fx:id="signupButton" layoutX="596.0" layoutY="470.0" mnemonicParsing="false" onAction="#pressSignUp" styleClass="normal-button" text="Sign up!" />
      <Label layoutX="515.0" layoutY="515.0" nodeOrientation="RIGHT_TO_LEFT" styleClass="label" text="Already have an account? ">
         <graphic>
            <Hyperlink contentDisplay="RIGHT" onAction="#pressSignIn" styleClass="hyperlink" text="Log in" />
         </graphic>
      </Label>
      <VBox layoutX="69.0" layoutY="182.0" prefHeight="276.0" prefWidth="302.0">
         <children>
            <Label prefHeight="202.0" prefWidth="302.0" styleClass="header-label" text="Sign the fuck up" />
            <Label prefHeight="166.0" prefWidth="334.0" text="Gain access to the most recent Comiket's doujinshi" wrapText="true" />
         </children>
      </VBox>
      <VBox layoutX="432.0" layoutY="198.0" prefHeight="249.0" prefWidth="410.0">
         <children>
            <Label prefHeight="22.0" prefWidth="91.0" styleClass="label" text="Display name" />
            <TextField fx:id="displayname" promptText="Display name" styleClass="text-field" />
            <Label prefHeight="24.0" prefWidth="79.0" styleClass="label" text="User name">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="username" promptText="Username" styleClass="text-field" />
            <Label prefHeight="20.0" prefWidth="82.0" styleClass="label" text="Password">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="password" promptText="Password" styleClass="password-field" />
            <Label styleClass="label" text="Confirm">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="confirmpass" promptText="Confirm your password" styleClass="password-field" />
            <Label fx:id="confirmMessage" prefHeight="16.0" prefWidth="208.0" styleClass="label" />
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@CSS/RegisterStyle.css" />
      <URL value="@CSS/general.css" />
   </stylesheets>
</AnchorPane>
