<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="720.0" prefWidth="1200.0" stylesheets="@RegisterStyle.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="threeoone.bigproject.controller.viewcontrollers.RegisterController">
   <children>
      <Label layoutX="526.0" layoutY="147.0" styleClass="label-title" text="Account Register">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="436.0" layoutY="208.0" styleClass="label" text="Display name" />
      <Label layoutX="436.0" layoutY="260.0" styleClass="label" text="User name" />
      <Label layoutX="436.0" layoutY="314.0" styleClass="label" text="Password" />
      <Label layoutX="436.0" layoutY="372.0" styleClass="label" text="Confirm" />
      <TextField fx:id="displayname" layoutX="562.0" layoutY="202.0" promptText="Display name" styleClass="text-field" />
      <TextField fx:id="username" layoutX="562.0" layoutY="254.0" promptText="Username" styleClass="text-field" />
      <PasswordField fx:id="password" layoutX="562.0" layoutY="308.0" promptText="Password" styleClass="password-field" />
      <PasswordField fx:id="confirmpass" layoutX="562.0" layoutY="366.0" promptText="Confirm your password" styleClass="password-field" />
      <Button fx:id="signupButton" layoutX="680.0" layoutY="437.0" mnemonicParsing="false" onAction="#pressSignUp" styleClass="button" text="Sign up" />
      <Label layoutX="436.0" layoutY="437.0" nodeOrientation="RIGHT_TO_LEFT" styleClass="label" text="Already have an account? ">
         <graphic>
            <Hyperlink contentDisplay="RIGHT" onAction="#pressSignIn" styleClass="hyperlink" text="Sign in" />
         </graphic>
      </Label>
      <Label fx:id="confirmMessage" layoutX="532.0" layoutY="408.0" prefHeight="16.0" prefWidth="208.0" styleClass="label" />
   </children>
</AnchorPane>
