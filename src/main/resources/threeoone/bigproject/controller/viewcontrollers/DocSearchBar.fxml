<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="threeoone.bigproject.controller.viewcontrollers.DocSearchBarController">
   <children>
      <HBox prefHeight="45.0" prefWidth="595.0" styleClass="background" stylesheets="@CSS/general.css">
         <children>
            <TextField fx:id="search" prefHeight="26.0" prefWidth="327.0" promptText="Choose your search type and insert text here..." HBox.hgrow="SOMETIMES">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" top="8.0" />
               </HBox.margin>
            </TextField>
            <ChoiceBox fx:id="type" prefHeight="33.0" prefWidth="151.0">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </ChoiceBox>
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#pressSearch" prefHeight="40.0" prefWidth="106.0" styleClass="normal-button" text="Search" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets left="20.0" right="15.0" top="2.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
